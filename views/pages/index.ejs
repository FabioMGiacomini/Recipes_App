<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/head') %>
<body>
    <%- include('../partials/header') %>
    <main>

    <div class="nuovaricetta">
        <button onclick="location.href='inserisci-ricetta'" class="btn btn-outline-success">inserisci una nuova ricetta</button> 
    </div>
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="ricette">
                    <div class="ricetta">
                      <div class="row">
                          <% ricetteDaMostrare.forEach( element => { %>
                          <div class="col-12 col-lg-6 mt-2">
                              <div class="card mt-3 shadow border-0 h-100">
                                      <img  src="<%= element.immagine %>" class="card-img-top" id="topFoto">
                                      <% if(element.immagine) { %>
                                      <label for="topFoto" class="topfoto">Credits: <%= element.immagine %></label>
                                      <% } %>
                                      <div class="card-body d-flex justify-content-between pt-0">
                                        <div class="pt-5">
                                            <h5 class="card-title mb-3"><%= element.title.toUpperCase() %></h5>
                                            <p class="card-text mb-0 pb-1"><strong>Procedimento</strong><br> <%= element.procedimento %></p> 
                                            <p class="card-text mb-0 pb-1 mb-5"><strong>Ingredienti</strong><br> <%= element.ingredienti %></p>  
                                            <p class="card-text mb-0 pb-1 read-more"><a href="/ricetta/<%= element.title %>">Vai alla ricetta</a> </p>                                      
                                           </div> 
                                        <div class="d-flex justify-content-end p-3">
                                          <div class="special-buttons"> 
                                            <a class="btn rounded-circle bg-success shadow me-2" href="/modifica/<%= element.title %>">
                                                <i class="bi bi-pen" style="font-size: 1.6rem; color: rgb(255, 255, 255);"></i>
                                             </a>
                                            <a class="btn rounded-circle bg-danger shadow"  href="/elimina/<%= element.title %>">
                                                <i class="bi bi-trash3" style="font-size: 1.6rem; color: rgb(255, 255, 255);"></i>
                                            </a>  
                                           </div>
                                        </div>
                                    </div>
                              </div> 
                          </div>  
                          <% }) %>   
                      </div>
                     </div>
              </div>
            </div>
        </div>
    </div>
    </main>
    <%- include('../partials/footer') %>
</body>
</html>