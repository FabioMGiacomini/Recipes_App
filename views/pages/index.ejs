<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %>
<%- include('../partials/header') %>
    <body>
        </header>
            <main> 
                <div class="container">
                    <div class="row">
                        <div class="col-12">
                            <h2 class="text-center mt-4 mb-0">welcome <%= utente %></h2>
                        </div>
                        <div class="col-12">
                            <div class="ricette">
                                <div class="">
                                    <div class="row">
                                        <% ricetteDaMostrare.forEach( element=> { %>
                                            <div class="offset-lg-3 col-lg-6 ricetta">
                                                <div class="card mt-3 shadow border-0">
                                                    <img src="<%= element.immagine %>" class="card-img-top"
                                                        id="topFoto">
                                                    <% if(element.immagine) { %>
                                                        <label for="topFoto" class="topfoto">Credits: <%=
                                                                element.immagine %></label>
                                                        <% } %>
                                                            <div
                                                                class="card-body d-flex flex-column justify-content-between pt-0">
                                                                <div class="pt-4">
                                                                    <h5 class="card-title mb-3">
                                                                        <%= element.title.toUpperCase() %>
                                                                    </h5>
                                                                    <p class="card-text mb-0 pb-1">
                                                                        <strong>Ingredienti</strong><br>
                                                                        <%= element.ingredienti %>
                                                                    </p>
                                                                    <p class="card-text mb-0 pb-1">
                                                                        <strong>Procedimento</strong><br>
                                                                        <%= element.procedimento %>
                                                                    </p>
                                                                </div>
                                                                <div class="d-flex justify-content-between align-items-end p-3">
                                                                    <p class="card-text mb-0 read-more"><a
                                                                            href="/ricetta/<%= element.title %>"
                                                                            class="text-decoration-none">Vai alla
                                                                            ricetta <i
                                                                                class="mt-1 ms-2 bi bi-arrow-right-circle"></i></a>
                                                                    </p>
                                                                    <div class="special-buttons">
                                                                        <a class="btn rounded-circle bg-success shadow me-2"
                                                                            href="/modifica/<%= element.title %>">
                                                                            <i class="bi bi-pen"
                                                                                style="font-size: 1.6rem; color: rgb(255, 255, 255);"></i>
                                                                        </a>
                                                                        <a class="btn rounded-circle bg-danger shadow"
                                                                            href="/elimina/<%= element.title %>">
                                                                            <i class="bi bi-trash3"
                                                                                style="font-size: 1.6rem; color: rgb(255, 255, 255);"></i>
                                                                        </a>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                </div>
                                            </div>
                                            <% }) %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
            <%- include('../partials/footer') %>
    </body>

</html>